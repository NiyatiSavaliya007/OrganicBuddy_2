
@{
    ViewData["Title"] = "Wishlist";
}

<div class='container-xxl wishlist-wrapper home-wrapper-2 py-5'>
    <div class='row'>
        <div class="col-12">
            <div class="compare-product-card position-relative">
                <div class='cart-col-1 gap-15 d-flex align-items-center'>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class='col-9'>
                                <div class='wishlist-card position-relative'>
                                    <div class='container-xxl wishlist'>

                                        <div class='wishlist-card-image'>
                                            <img height="214px" width="250px" src='../images/fruit/avocado.jpg' alt='product' />
                                        </div>
                                        <div class='py-3'>
                                            <h5 class='title'>
                                                @item.Description
                                            </h5>
                                            <h6 class='price'>₹@item.Price</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No items in the cart.</p>
                    }
                </div>
            </div>
        </div>
        
    </div>
</div>

