
@{
    ViewData["Title"] = "Login";
}

<div class="container-xxl login-wrapper py-5 home-wrapper-2">
    <div class="row">
        <div class="col-12">
            <div class="auth-card">
                <h3 class="text-center mb-3">Login</h3>
                <form asp-action="Login" asp-controller="Home" class="d-flex flex-column gap-20">
                    <Input class="form-control" type="email" name="email" placeholder="Email" />
                    <Input class="form-control mt-1" type="password" name="password" placeholder="Password" />

                    <div>
                        <a asp-action="ForgotPassword" asp-controller="Home">Forgot Password?</a>
                        <div class="mt-3 d-flex justify-content-center gap-15 align-items-center">
                            <button type="submit" class="button border-0">Login</button>
                            <a class="button signup" asp-action="SignUp" asp-controller="Home">Sign Up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

