@model OrganicBuddy_2.Models.User
@{
    ViewData["Title"] = "SignUp";
}

<div class='container-xxl login-wrapper py-5 home-wrapper-2'>
    <div class='row'>
        <div class='col-12'>
            <div class='auth-card'>
                <h3 class='text-center mb-3'>Sign Up</h3>
                <!-- Ensure proper model binding by adding asp-for attributes -->
                <form asp-action="SignUp" method="post" class='d-flex flex-column gap-20'>
                    <input asp-for="Name" placeholder='Name' class='form-control' />
                    <input asp-for="Email" placeholder='Email' class='form-control' />
                    <input asp-for="Mobile" placeholder='Mobile Number' class='form-control' />
                    <input asp-for="Password" placeholder='Password' class='form-control mt-0' />

                    <div>
                        <div class='mt-3 d-flex justify-content-center gap-15 align-items-center'>
                            <button type='submit' class='button border-0'>Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
